{
    "manifest_version": 2,
    "name": "Quick Copy",
    "description": "Automatically copy selected text to clipboard",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icon-inactive.png",
        "default_title": "Click to activate Quick Copy"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "48": "icon-inactive.png",
        "96": "icon-inactive.png"
    }
}